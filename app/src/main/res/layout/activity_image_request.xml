<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cindy.androidstudy.ImagePickActivity">

    <Button
        android:id="@+id/btn_send_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Send Intent" />

    <Button
        android:id="@+id/btn_capture_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_send_intent"
        android:textAllCaps="false"
        android:text="Capture Image" />

    <Button
        android:id="@+id/btn_retrieve_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_capture_image"
        android:textAllCaps="false"
        android:text="Retrieve Images" />

    <ImageView
        android:id="@+id/select_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_retrieve_file" />


</android.support.constraint.ConstraintLayout>
